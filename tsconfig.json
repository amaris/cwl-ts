{
    "compilerOptions": {
        "noEmitHelpers": false, //@fixme, check if this is still necessary
        "module": "commonjs",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "sourceMap": false,
        "pretty": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "outDir": "./lib",
        "target": "es2015",
        "lib": ["dom", "es2015"],
        "types": ["node", "mocha", "chai"]
    },
    "exclude": [
        "lib",
        "node_modules",
        "**/*.json"
    ]
}