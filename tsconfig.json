{
    "compilerOptions": {
        "noEmitHelpers": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "sourceMap": false,
        "pretty": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "outDir": "./lib",
        "target": "es5"
    },
    "exclude": [
        "lib",
        "node_modules",
        "**/*.spec.ts",
        "**/*.json",
        "src/tests/**/*.ts"
    ]
}