{
    "compilerOptions": {
        "noEmitHelpers": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "sourceMap": false,
        "pretty": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "outDir": "dist",
        "target": "es5",
        "lib": [
            "dom",
            "es6"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "dist",
        "node_modules",
        "**/*.json"
    ]
}